generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
id String @id @default(uuid())
username String  @unique
role Role @default (customer)
password String
email String @unique

}

enum Role {
  customer
  admin
}
model TicketAdmin{
  id String @id @default(uuid())
  eventName String 
  date DateTime
  locationCity String
  locationEvent String
  shortDisc String
  // image String


}
//this is the table adding by customer sell the Ticket
model Ticket {
  id String @id @default(uuid())
  type String
  numberOfTicket String
  priceByPeice Int
  IBAN String
    // image String

  createAt DateTime @default(now())
  user_id String
}
