generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
id String @id @default(uuid())
firstName String 
LastName String 
username String  @unique
role Role @default (customer)
password String
email String @unique
mobileNumber Int? @unique
dateOfBirth DateTime? @db.Date
ticket Ticket[]
}

model EventByAdmin{
  id String @id @default(uuid())
  eventName String 
  date DateTime
  locationCity String
  locationEvent String
  shortDesc String
  // image String


}
//this is the table adding by customer sell the Ticket
model Ticket {
  id String @id @default(uuid())
  type Type
  numberOfTicket Int
  price Int
    // image String

  createAt DateTime @default(now())
  user_id String
  user User @relation(fields: [user_id],references: [id])
}

enum Role {
  customer
  admin
}
enum Type {
  Regular
  Silver
  Gold
  Platinum
}