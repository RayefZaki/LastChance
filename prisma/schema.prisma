generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
id String @id @default(uuid())
username String  @unique
role Role @default (customer)
password String
email String @unique
IBAN String
ticket Ticket[]
}

model TicketAdmin{
  id String @id @default(uuid())
  eventName String @unique
  createAt DateTime @default(now())
  dateEvent String
  locationCity String
  locationEvent String
  shortDisc String 
  image String


}
//this is the table adding by customer sell the Ticket
model Ticket {
  id String @id @default(uuid())
  type String
  numberOfTicket Int
  price Int
  image String
  seatsLocation String
  createAt DateTime @default(now())
  user_id String
  user User @relation(fields: [user_id],references: [id])
}

enum Role {
  customer
  admin
}
